<div class="page-header">
    <h1>Sign Up</h1>
</div>
<form class="form" action="/auth/signup" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="email" value="">
    </div>
    <div class="form-group">
        <label for="email">Password</label>
        <input type="password" class="form-control" name="password" value="">
    </div>
    <div class="radio">
        Admin Access
        <label class="radio-inline"><input type="radio" class="form-control" name="admin" value="false" checked>No</label>
        <label class="radio-inline"><input type="radio" class="form-control" name="admin" value="true">Yes</label>
    </div>
    <button class="btn btn-primary" type="submit">Sign Up</button>
</form>
